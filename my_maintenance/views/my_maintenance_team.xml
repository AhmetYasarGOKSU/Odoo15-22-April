<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="view_my_maintenance_team_kanban" model="ir.ui.view">
                <field name="name">my.maintenance.team.kanban</field>
                <field name="model">my.maintenance.team</field>
                <field name="arch" type="xml">
                        <kanban>
                                <field name="name"/>
                                <templates>
                                        <t t-name="kanban-box">
                                                <div t-attf-class="oe_kanban_global_click">
                                                        <div class="oe_kanban_details">
                                                                <ul>
                                                                        <li>
                                                                                <h2>
                                                                                        <field name="name"/>
                                                                                </h2>
                                                                        </li>
                                                                        <li>
                                                                                <field name="member_ids"/>
                                                                        </li>
                                                                </ul>
                                                        </div>
                                                </div>
                                        </t>
                                </templates>
                        </kanban>
                </field>
        </record>

        <record id="view_my_maintenance_team_tree" model="ir.ui.view">
                <field name="name">my.maintenance.team.tree</field>
                <field name="model">my.maintenance.team</field>
                <field name="arch" type="xml">
                        <tree editable="bottom">
                                <field name="name"/>
                                <field name="member_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create': True}" domain="[('share', '=', False)]"/>
                        </tree>
                </field>
        </record>


        <record id="view_my_maintenance_team_form" model="ir.ui.view">
                <field name="name">maintenance.team.form</field>
                <field name="model">my.maintenance.team</field>
                <field name="arch" type="xml">
                        <form>
                                <sheet>
                                        <div class="oe_title">
                                                <label for="name"/>
                                                <h1>
                                                        <field name="name" string="Name"/>
                                                </h1>
                                        </div>
                                        <group>
                                                <group>
                                                        <field name="member_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create': True}" domain="[('share', '=', False)]"/>
                                                </group>
                                                <group>

                                                </group>
                                        </group>
                                </sheet>
                        </form>
                </field>
        </record>


        <record id="action_my_maintenance_team" model="ir.actions.act_window">
        <field name="name">Teams</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">my.maintenance.team</field>
        <field name="view_mode">tree,kanban,form</field>
    </record>
</odoo>